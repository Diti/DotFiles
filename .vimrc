execute pathogen#infect()

syntax on
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

set background=dark
colorscheme solarized
set t_Co=256
call togglebg#map("<F5>")

set number
set ruler
set showcmd
set cursorline

"Better command completion
set wildmenu
set wildmode=list:longest
